<% if current_user.own?(comment) %>
  <div class="msg-cnt msg-right" id="comment-<%= comment.id %>">
    <div class="avatar">
      <%= image_tag comment.user.avatar.url, class: "avatar" %>
    </div>
    <p class="msg-inrTxt">
      <span class="triangle"></span>
      <span class="has-text-right" style="display: inline-block; width: 100%;">
        <%= simple_format(comment.body, { class: "comment-text" }, { wrapper_tag: "span" }) %>
      </span>
      <br>
      <span class="mt-2 has-text-right date">
        <span>
          <i class="far fa-clock"></i>
          <%= "#{time_ago_in_words(comment.created_at)}前" %>
        </span>
        <span class="user-name-right">
          <i class="far fa-user"></i>
          <%= comment.user.name %>
        </span>
      </span>
    </p>
    <div class="dropdown is-right dropdown-right is-active is-align-items-center">
      <div class="dropdown-trigger">
        <span id="js-comment-edit-icon" class="icon is-small">
          <i class="fa fa-ellipsis-h edit-comment-icon" aria-hidden="true"></i>
        </span>
      </div>
      <div id="js-comment-edit-menu" class="dropdown-menu dropdown-right-menu" role="menu" style="display: none;">
        <div class="dropdown-content">
          <div class="dropdown-item">
            <a class="button is-primary is-small mr-2 has-text-weight-semibold" data-confirm="コメントを削除しますか?" data-remote="true" rel="nofollow" data-method="" href="#">編集</a>
            <%= link_to "削除", comment_path(comment), class: "button is-link is-small has-text-weight-semibold js-delete-comment-button", method: :delete, data: { confirm: t("defaults.message.delete_confirm") }, remote: true %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="msg-cnt msg-left">
    <div class="avatar">
      <img src="/assets/no_image.png" alt="" class="avatar">
    </div>
    <p class="msg-inrTxt">
      <span class="triangle"></span>
      <%= simple_format(comment.body, {}, wrapper_tag: "span") %>
      <br>
      <span class="mt-2 date">
        <span class="user-name-left">
          <i class="far fa-user"></i>
          <%= comment.user.name %>
        </span>
        <span>
          <i class="far fa-clock"></i>
          <%= "#{time_ago_in_words(comment.created_at)}前" %>
        </span>
      </span>
    </p>
  </div>
<% end %>
